        <!-- ✅ Inheriting the Portal Home Template to Add a New Section -->
        <template id="portal_my_school_home" inherit_id="portal.portal_my_home">
            <xpath expr="//div[@id='portal_common_category']" position="inside">
                <t t-call="portal.portal_docs_entry">
