<template id="rfq_list_template" name="RFP List">
    <t t-call="portal.portal_layout">
        <div class="container">
            <h1 class="mt-4">Your RFQs</h1>

            <!-- Searchbar -->
            <t t-call="portal.portal_searchbar">
                <t t-set="title">RFQ</t>
            </t>

            <!-- Table with search, sort, and pagination -->
            <t t-call="portal.portal_table">
                <t t-set="table_id" t-value="'rfq_table'"/>
                <t t-set="table_class" t-value="'table table-striped'"/>
                <t t-set="table_columns" t-value="[
                    {'name': 'RFP Number', 'sort_key': 'name'},
                    {'name': 'Required Date', 'sort_key': 'date_order'},
                    {'name': 'Total Amount', 'sort_key': 'amount_total'},
                    {'name': 'Action', 'sort_key': None},
                ]"/>
                <t t-set="table_rows" t-value="rfqs"/>
                <t t-set="table_pager" t-value="pager"/>
                <t t-set="table_sortby" t-value="sortby"/>
                <t t-set="table_search" t-value="search"/>
                <t t-set="table_search_in" t-value="search_in"/>
            </t>

            <!-- Original table structure -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>RFP Number</th>
                        <th>Required Date</th>
                        <th>Total Amount</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-if="rfqs">
                        <t t-foreach="rfqs" t-as="rfp">
                            <tr>
                                <td><t t-esc="rfp.name"/></td>
                                <td><t t-esc="rfp.date_order"/></td>
                                <td><t t-esc="rfp.amount_total"/></td>
                                <td>
                                    <a t-att-href="'/supplier_management/rfq/%s' % rfp.id" class="btn btn-primary">View Details</a>
                                </td>
                            </tr>
                        </t>
                    </t>
                    <t t-else="">
                        <tr>
                            <td colspan="4" class="text-center">No RFQs found.</td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </t>
</template>

<template id="rfq_details_template" name="RFP Details">
    <t t-call="portal.portal_layout">
        <div class="container mt-4">
            <h1 class="mb-4">RFP Details</h1>

            <!-- Back Button -->
            <a href="/supplier_management/rfq" class="btn btn-secondary mb-4">Back to RFQs</a>

            <!-- RFQ Details -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">RFP Information</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>RFP Number:</strong> <t t-esc="rfp.name"/></p>
                            <p><strong>Required Date:</strong> <t t-esc="rfp.date_order"/></p>
                            <p><strong>Total Amount:</strong> <t t-esc="rfp.amount_total"/></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Status:</strong> <t t-esc="rfp.state"/></p>
                            <p><strong>Vendor:</strong> <t t-esc="rfp.partner_id.name"/></p>
                            <p><strong>Created On:</strong> <t t-esc="rfp.create_date"/></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Products Section -->
            <div class="card mt-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Products</h4>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="rfp.order_line" t-as="line">
                                <tr>
                                    <td><t t-esc="line.product_id.name"/></td>
                                    <td><t t-esc="line.product_qty"/></td>
                                    <td><t t-esc="line.price_unit"/></td>
                                    <td><t t-esc="line.price_subtotal"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Additional Information -->
            <div class="card mt-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Additional Information</h4>
                </div>
                <div class="card-body">
                    <p><strong>Turms and Conditions:</strong> <t t-esc="rfp.notes"/></p>
                </div>
            </div>
        </div>
    </t>
</template>

</odoo>