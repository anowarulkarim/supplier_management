                <h5 class="card-title text-primary fw-bold mb-3">
                    <t t-esc="props.name"/>
                </h5>
                
                <div class="d-flex align-items-center justify-content-center">
                    <span class="fs-3 fw-bold text-dark me-2">
                        <t t-esc="props.value"/>
                    </span>
                    <!-- <span t-attf-class="fs-5 fw-bold badge bg-#{ props.percentage > 0 ? 'success' : 'danger' }">
                        <span t-attf-class="me-1 fa fa-arrow-#{ props.percentage > 0 ? 'up' : 'down' }"/>
                        <t t-esc="props.percentage"/>%
                    </span> -->
                </div>

                <hr class="my-3"/>
            </div>
        </div>
    </t>
</template>
